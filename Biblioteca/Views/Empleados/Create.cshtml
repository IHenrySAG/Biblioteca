@model Biblioteca.Model.Empleado

@{
    ViewData["Title"] = "Nuevo Empleado";
}

<h3>Nuevo Empleado</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" id="cedulaInput" type="text" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CodigoTanda" class="control-label">Tanda</label>
                <select asp-for="CodigoTanda" class="form-control" asp-items="ViewBag.TandasLabor"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PorcentajeComision" class="control-label">Porcentaje Comision</label>
                <input asp-for="PorcentajeComision" class="form-control" />
                <span asp-validation-for="PorcentajeComision" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="FechaIngreso" class="control-label">Fecha Ingreso</label>
                <input asp-for="FechaIngreso" class="form-control" type="date" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="NombreUsuario" class="control-label"></label>
                <input asp-for="NombreUsuario" class="form-control" type="text" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Contrasenia" class="control-label"></label>
                <input asp-for="Contrasenia" class="form-control" type="password" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="RepetirContrasenia" class="control-label"></label>
                <input asp-for="RepetirContrasenia" class="form-control" type="password" />
                <span asp-validation-for="RepetirContrasenia" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CodigoRol" class="control-label"></label>
                <select asp-for="CodigoRol" class="form-select" asp-items="ViewBag.Roles"></select>
            </div>
            <div class="form-group d-flex mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
