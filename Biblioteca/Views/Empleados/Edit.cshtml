@model Biblioteca.Model.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
}

<h4>Editar Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CodigoEmpleado" type="hidden" />
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CodigoTanda" class="control-label"></label>
                <select asp-for="CodigoTanda" class="form-control" asp-items="ViewBag.TandasLabor"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PorcentajeComision" class="control-label"></label>
                <input asp-for="PorcentajeComision" class="form-control" />
                <span asp-validation-for="PorcentajeComision" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FechaIngreso" class="control-label"></label>
                <input asp-for="FechaIngreso" class="form-control" type="date" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-4">
                <input type="submit" value="Editar" class="btn btn-success" />
                <a class="btn btn-primary ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
