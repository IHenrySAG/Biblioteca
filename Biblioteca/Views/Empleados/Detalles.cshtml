@model Biblioteca.Model.Empleado
@using Biblioteca.Common
@{
    ViewData["Title"] = "Detalles del empleado " + Model.Nombre + " " + Model.Apellido;
}

<div>
    <h3>@ViewData["Title"]</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Codigo Empleado</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoEmpleado)
        </dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">Cédula</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">Tanda Laboral</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TandaLabor.NombreTanda)
        </dd>
        <dt class="col-sm-2">Fecha Ingreso</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
        <dt class="col-sm-2">Nombre Usuario</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rol.NombreRol)
        </dd>
        @if (Model.Prestamos != null && Model.Prestamos.Count > 0 && new List<string>{ERoles.BIBLIOTECARIO.ToString(), ERoles.ADMIN.ToString()}.Contains(ViewBag.Rol))
        {
            <dt class="col-sm-2">Préstamos</dt>
            <dd class="col-sm-10">
                <a href="/Empleados/@Model.CodigoEmpleado/Prestamos" class="btn btn-info text-white">Ver prestamos creados</a>
            </dd>
        }
    </dl>

    @if (ViewBag.EditarDatos)
    {
        <div class="form-group d-flex mt-3">
            <a asp-action="Editar" class="btn btn-warning text-white" asp-route-id="@Model.CodigoEmpleado">Editar</a>
            <a class="btn btn-secondary ms-2" asp-action="Index">Volver a la lista</a>
        </div>
    }
    else
    {
        <div class="form-group d-flex mt-3">
            <a class="btn btn-warning text-white" asp-action="CambiarContrasenia" asp-route-id="@Model.CodigoEmpleado">Cambiar Contrasenia</a>
            <a class="btn btn-secondary ms-2" asp-controller="Home" asp-action="Index">Volver a pagina principal</a>
        </div>
    }
</div>
