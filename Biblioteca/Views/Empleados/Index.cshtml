@model IEnumerable<Biblioteca.Model.Empleado>
@using Biblioteca.Common

@{
    ViewData["Title"] = "Lista de Empleados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a class="btn btn-success align-self-end" asp-action="Crear">Nuevo Empleado</a>
    <h1>Lista de empleados</h1>
    <div>
        <form class="d-flex" role="search" method="get">
            <input name="filtro" class="form-control me-2" type="search" value="@ViewBag.Filtro" placeholder="Buscar" aria-label="Search" />
            <button class="btn btn-outline-success" type="submit">Buscar</button>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Tanda Laboral</th>
            <th>Rol</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CodigoEmpleado)</td>
                <td>@item.Nombre.ToMaxLength(30)</td>
                <td>@item.Apellido.ToMaxLength(30)</td>
                <td>@Html.DisplayFor(modelItem => item.TandaLabor.NombreTanda)</td>
                <td>@Html.DisplayFor(modelItem => item.Rol.NombreRol)</td>
                <td>
                    <a class="btn btn-info text-white" asp-action="Detalles" asp-route-id="@item.CodigoEmpleado">Detalles</a>
                    <a class="btn btn-warning ms-2 text-white" asp-action="Editar" asp-route-id="@item.CodigoEmpleado">Editar</a>
                    <a class="btn btn-danger ms-2" asp-action="Eliminar" asp-route-id="@item.CodigoEmpleado">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
