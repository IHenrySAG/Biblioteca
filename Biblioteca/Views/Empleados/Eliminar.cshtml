@model Biblioteca.Model.Empleado

@{
    ViewData["Title"] = "Borrar Empleado";
}

<h3>¿Está seguro que desea eliminar este empleado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Codigo Empleado</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoEmpleado)
        </dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">Cédula</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">Tanda Laboral</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TandaLabor.NombreTanda)
        </dd>
        <dt class="col-sm-2">Fecha Ingreso</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
    </dl>

    <form class="d-flex" asp-action="Eliminar">
        <input type="hidden" asp-for="CodigoEmpleado" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-secondary ms-2" asp-action="Index">Volver a la lista</a>
    </form>
</div>
