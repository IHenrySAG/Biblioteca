@model Biblioteca.Model.Editora

@{
    ViewData["Title"] = "Detalles editora "+Model.NombreEditora;
}

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Codigo Editora</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoEditora)
        </dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreEditora)
        </dd>
        <dt class="col-sm-2">Descripcion</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning text-white" asp-action="Editar" asp-route-id="@Model?.CodigoEditora">Editar</a>
    <a class="btn btn-secondary text-white ms-2" asp-action="Index">Volver a la lista</a>
</div>
