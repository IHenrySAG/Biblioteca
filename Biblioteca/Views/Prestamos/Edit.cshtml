@model Biblioteca.Model.Prestamo

@{
    ViewData["Title"] = "Editar Préstamo";
}

<h4>Editar Préstamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CodigoPrestamo" type="hidden" />
            <div class="form-group mb-3">
                <label asp-for="CodigoEmpleado" class="control-label"></label>
                <select asp-for="CodigoEmpleado" class="form-control" asp-items="ViewBag.Empleados"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CodigoLibro" class="control-label"></label>
                <select asp-for="CodigoLibro" class="form-control" asp-items="ViewBag.Libros"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CodigoEstudiante" class="control-label"></label>
                <select asp-for="CodigoEstudiante" class="form-control" asp-items="ViewBag.Usuarios"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CantidadDias" class="control-label"></label>
                <input asp-for="CantidadDias" class="form-control" />
                <span asp-validation-for="CantidadDias" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-4">
                <input type="submit" value="Editar" class="btn btn-success" />
                <a class="btn btn-primary ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
