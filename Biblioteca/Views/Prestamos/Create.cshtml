@model Biblioteca.Model.Prestamo

@{
    ViewData["Title"] = "Nuevo Préstamo";
}



<h3>Nuevo Préstamo</h3>
<hr />

@if (ViewBag.ErrorLibros != null || ViewBag.ErrorUsuarios != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorLibros <br />
        @ViewBag.ErrorEstudiantes
    </div>
    <div class="form-group d-flex mt-3">
        <a class="btn btn-primary ms-2" asp-action="Index">Volver a la lista</a>
    </div>

}else{

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="formCrearPrestamo">
            <div id="libro-container">
                <div class="form-group my-3">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalSeleccionarEditora">
                        Seleccionar Libro
                    </button>
                </div>               
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="CodigoLibro" class="control-label"></label>
                <select asp-for="CodigoLibro" class="form-control" asp-items="ViewBag.Libros"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CodigoEstudiante" class="control-label"></label>
                <select asp-for="CodigoEstudiante" class="form-control" asp-items="ViewBag.Usuarios"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CantidadDias" class="control-label"></label>
                <input asp-for="CantidadDias" class="form-control" />
                <span asp-validation-for="CantidadDias" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>


}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div class="modal fade" id="modalSeleccionarLibro" tabindex="-1" aria-labelledby="modalLibroLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalLibroLabel">Seleccionar Libro</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="d-flex" id="frmBuscarLibro">
                    <input name="filtroEditora" class="form-control me-2" type="search" placeholder="Buscar Editora" aria-label="Search" />
                    <button class="btn btn-outline-success" id="btnBuscarEditora" type="button" onclick="buscarEditoraClick()">Buscar</button>
                </form>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Titulo</th>
                            <th>Autor</th>
                            <th>Ciencia</th>
                            <th>Anio publicacion</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbody-Libros">
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>