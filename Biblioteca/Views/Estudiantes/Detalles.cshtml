@using Biblioteca.Common
@model Biblioteca.Model.Estudiante

@{
    ViewData["Title"] = "Detalles " + Model.Nombre + " " + Model.Apellido;
}

<div>
    <h3>Detalles de @Model.Nombre @Model.Apellido</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Codigo Estudiante</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoEstudiante)
        </dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">Cédula</dt>
        <dd class="col-sm-10">
            @Model.Cedula.ToCedulaFormat()
        </dd>
        <dt class="col-sm-2">Número Carnet</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroCarnet)
        </dd>
        <dt class="col-sm-2">Tipo Persona</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoPersona.NombreTipo)
        </dd>
        @if (Model.Prestamos != null && Model.Prestamos.Count > 0)
        {
            <dt class="col-sm-2">Préstamos</dt>
            <dd class="col-sm-10">
                <a class="btn btn-info text-white ms-2" href="/Estudiantes/@Model.CodigoEstudiante/Prestamos">Ver prestamos realizados</a>
            </dd>
        }
    </dl>
    <div class="form-group d-flex mt-3">
        <a asp-action="Editar" class="btn btn-warning text-white" asp-route-id="@Model.CodigoEstudiante">Editar</a>
        <a class="btn btn-secondary ms-2" asp-action="Index">Volver a la lista</a>
    </div>
</div>
