@using Biblioteca.Common
@model IEnumerable<Biblioteca.Model.Estudiante>

@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a class="btn btn-success align-self-end" asp-action="Crear">Nuevo Estudiante</a>
    <h2>Lista de Estudiantes</h2>
    <div>
        <form class="d-flex" role="search" method="get">
            <input name="filtro" class="form-control me-2" type="search" value="@ViewBag.Filtro" placeholder="Buscar" aria-label="Search" />
            <button class="btn btn-outline-success" type="submit">Buscar</button>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cédula</th>
            <th>Número Carnet</th>
            <th>Tipo Persona</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CodigoEstudiante)</td>
                <td>@item.Nombre.ToMaxLength(30)</td>
                <td>@item.Apellido.ToMaxLength(30)</td>
                <td>@item.Cedula.ToCedulaFormat()</td>
                <td>@Html.DisplayFor(modelItem => item.NumeroCarnet)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoPersona.NombreTipo)</td>
                <td>
                    <a class="btn btn-info text-white" asp-action="Detalles" asp-route-id="@item.CodigoEstudiante">Detalles</a>
                    <a class="btn btn-warning ms-2 text-white" asp-action="Editar" asp-route-id="@item.CodigoEstudiante">Editar</a>
                    <a class="btn btn-danger ms-2" asp-action="Eliminar" asp-route-id="@item.CodigoEstudiante">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
