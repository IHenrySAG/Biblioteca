@model IEnumerable<Biblioteca.Model.Estudiante>

@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a class="btn btn-success align-self-end" asp-action="Create">Nuevo Estudiante</a>
    <h1>Lista de Estudiantes</h1>
    <div></div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cédula</th>
            <th>Número Carnet</th>
            <th>Tipo Persona</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CodigoEstudiante)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                <td>@Html.DisplayFor(modelItem => item.NumeroCarnet)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoPersona.NombreTipo)</td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.CodigoEstudiante">Ver detalles</a>
                    <a class="btn btn-warning text-white ms-1" asp-action="Edit" asp-route-id="@item.CodigoEstudiante">Edit</a>
                    <a class="btn btn-danger ms-1" asp-action="Delete" asp-route-id="@item.CodigoEstudiante">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
