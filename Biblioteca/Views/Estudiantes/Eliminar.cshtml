@model Biblioteca.Model.Estudiante

@{
    ViewData["Title"] = "Borrar Estudiante";
}

<h3>¿Está seguro que desea eliminar este usuario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Codigo Estudiante</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoEstudiante)
        </dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">Cédula</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">Número Carnet</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroCarnet)
        </dd>
        <dt class="col-sm-2">Tipo Persona</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoPersona.NombreTipo)
        </dd>
    </dl>

    <form class="d-flex" asp-action="Eliminar">
        <input type="hidden" asp-for="CodigoEstudiante" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-secondary ms-2" asp-action="Index">Volver a la lista</a>
    </form>
</div>
