@model IEnumerable<Biblioteca.Model.ViewModel.LibroVM>
@using Biblioteca.Common

@{
    ViewData["Title"] = "Lista de Libros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div></div>
    <h1>@(string.IsNullOrWhiteSpace(ViewBag.Filtro)?"Lista de libros":"Buscar Libros")</h1>
    <div>
        <form class="d-flex" role="search" asp-action="Index">
            <input name="filtro" class="form-control me-2" type="search" value="@ViewBag.Filtro" placeholder="Search" aria-label="Search" />
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    @if (ViewBag.EditarLibros)
    {
        <a class="btn btn-success align-self-end" asp-action="Crear">Nuevo Libro</a>
    }
    <div>
        <div class="btn-group ms-1" role="group">
            <a class="btn btn-outline-primary" asp-action="ExportarLibrosCsv" title="Exportar Todo como CSV">
                <i class="bi bi-file-earmark-arrow-down"></i> Exportar Todo como CSV
            </a>
            <button type="button" class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="visually-hidden">Opciones de exportación</span>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" asp-action="ExportarLibrosXml">
                        <i class="bi bi-file-earmark-spreadsheet"></i> Exportar XML
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Titulo</th>
            <th>Autor</th>
            <th>Idioma</th>
            <th>Cant.</th>
                    
            <th>
                Accion
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoLibro)
                </td>
                <td>
                    @item.Titulo.ToMaxLength(50)
                </td>
                <td>
                    @{
                        string autor=item.Autores.First();
                        @autor.ToMaxLength(30)
                    }
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idioma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inventario)
                </td>
            <td>
                    <a class="btn btn-info text-white" asp-action="Detalles" asp-route-id="@item.CodigoLibro">Detalles</a>
                    <a class="btn btn-warning text-white ms-1" asp-action="Editar" asp-route-id="@item.CodigoLibro">Editar</a>
                    <a class="btn btn-danger ms-1" asp-action="Eliminar" asp-route-id="@item.CodigoLibro">Eliminar</a>
                    <a class="btn btn-outline-primary" asp-action="ExportarLibroCsv" asp-route-id="@item.CodigoLibro" title="Exportar CSV">
                        <i class="bi bi-file-earmark-arrow-down"></i> Exportar
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
