@model Biblioteca.Model.Libro

@{
    ViewData["Title"] = "Borrar Libro";
}

<h3>Esta seguro que desea eliminar este libro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Codigo Libro</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoLibro)
        </dd>
        <dt class="col-sm-2">Titulo</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">Signatura Topografica</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SignaturaTopografica)
        </dd>
        <dt class="col-sm-2">Isbn</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Isbn)
        </dd>
        <dt class="col-sm-2">Editora</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Editora.NombreEditora)
        </dd>
        <dt class="col-sm-2">Año Publicacion</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnioPublicacion)
        </dd>
        <dt class="col-sm-2">Ciencia</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ciencia)
        </dd>
        <dt class="col-sm-2">Idioma</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Idioma.NombreIdioma)
        </dd>
    </dl>
    
    <form class="d-flex" asp-action="Eliminar">
        <input type="hidden" asp-for="CodigoLibro" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-secondary ms-2" asp-action="Index">Volver a la lista</a>
    </form>
</div>
