@model Biblioteca.Model.TipoBibliografia

@{
    ViewData["Title"] = "Nuevo Tipo de Bibliografía";
}

<h3>Nuevo Tipo de Bibliografía</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="NombreBibliografia" class="control-label">Nombre Bibliografia</label>
                <input asp-for="NombreBibliografia" class="form-control" />
                <span asp-validation-for="NombreBibliografia" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="Descripcion" class="form-control" placeholder="Descripcion de la bibliografia"></textarea>
                <label asp-for="Descripcion"></label>
            </div>
            <div class="form-group d-flex mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
