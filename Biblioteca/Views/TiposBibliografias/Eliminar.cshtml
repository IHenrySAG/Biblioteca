@model Biblioteca.Model.TipoBibliografia

@{
    ViewData["Title"] = "Borrar Tipo de Bibliografía";
}

<h3>¿Está seguro que desea eliminar este tipo de bibliografía?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Codigo</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoBibliografia)
        </dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreBibliografia)
        </dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>

    <form class="d-flex" asp-action="Eliminar">
        <input type="hidden" asp-for="CodigoBibliografia" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-secondary ms-2" asp-action="Index">Volver a la lista</a>
    </form>
</div>
