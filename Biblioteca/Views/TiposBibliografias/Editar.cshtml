@model Biblioteca.Model.TipoBibliografia

@{
    ViewData["Title"] = "Editar Tipo de Bibliografía";
}

<h4>Editar Tipo de Bibliografía</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CodigoBibliografia" type="hidden" />
            <div class="form-group mb-3">
                <label asp-for="NombreBibliografia" class="control-label">Nombre</label>
                <input asp-for="NombreBibliografia" class="form-control" />
                <span asp-validation-for="NombreBibliografia" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-4">
                <input type="submit" value="Editar" class="btn btn-warning text-white" />
                <a class="btn btn-secondary ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
