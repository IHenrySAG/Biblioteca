@model Biblioteca.Model.Usuario

@{
    ViewData["Title"] = "Detalles " + Model.Nombre + " " + Model.Apellido;
}

<div>
    <h3>Detalles de @Model.Nombre @Model.Apellido</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Codigo Usuario</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoUsuario)
        </dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">Cédula</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">Número Carnet</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroCarnet)
        </dd>
        <dt class="col-sm-2">Tipo Persona</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoPersona.NombreTipo)
        </dd>
        @if (Model.Prestamos != null && Model.Prestamos.Count > 0)
        {
            <dt class="col-sm-2">Préstamos</dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var item in Model.Prestamos)
                    {
                        <li>
                            @Html.DisplayFor(modelItem => item.Libro.Titulo)
                            (Empleado: @Html.DisplayFor(modelItem => item.Empleado.Nombre))
                        </li>
                    }
                </ul>
            </dd>
        }
    </dl>
    <div class="form-group d-flex mt-3">
        <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.CodigoUsuario">Editar</a>
        <a class="btn btn-primary ms-2" asp-action="Index">Volver a la lista</a>
    </div>
</div>
