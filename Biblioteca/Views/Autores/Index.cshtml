@model IEnumerable<Biblioteca.Model.Autor>

@{
    ViewData["Title"] = "Lista de Autores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a class="btn btn-success align-self-end" asp-action="Create">Nuevo Autor</a>
    <h1>Lista de autores</h1>
    <div></div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>País de Origen</th>
            <th>Idioma</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoAutor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreAutor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaisOrigen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idioma.NombreIdioma)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.CodigoAutor">Ver detalles</a>
                    <a class="btn btn-warning text-white ms-1" asp-action="Edit" asp-route-id="@item.CodigoAutor">Edit</a>
                    <a class="btn btn-danger ms-1" asp-action="Delete" asp-route-id="@item.CodigoAutor">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
