@model Biblioteca.Model.Autor

@{
    ViewData["Title"] = "Editar Autor";
}

<h4>Editar Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CodigoAutor" type="hidden" />
            <div class="form-group mb-3">
                <label asp-for="NombreAutor" class="control-label"></label>
                <input asp-for="NombreAutor" class="form-control" />
                <span asp-validation-for="NombreAutor" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PaisOrigen" class="control-label"></label>
                <input asp-for="PaisOrigen" class="form-control" />
                <span asp-validation-for="PaisOrigen" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CodigoIdioma" class="control-label"></label>
                <select asp-for="CodigoIdioma" class="form-control" asp-items="ViewBag.Idiomas"></select>
            </div>
            <div class="form-group d-flex mt-4">
                <input type="submit" value="Editar" class="btn btn-success" />
                <a class="btn btn-primary ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
