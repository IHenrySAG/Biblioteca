@model Biblioteca.Model.Idioma

@{
    ViewData["Title"] = "Nuevo Idioma";
}

<h3>Nuevo Idioma</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="NombreIdioma" class="control-label">Nombre Idioma</label>
                <input asp-for="NombreIdioma" class="form-control" />
                <span asp-validation-for="NombreIdioma" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
